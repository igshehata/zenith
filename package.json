{
  "name": "zenith-backend",
  "version": "1.0.0",
  "module": "dist/server.js",
  "main": "src/server.ts",
  "license": "MIT",
  "type": "module",
  "description": "Scalable E-commerce Backend",
  "scripts": {
    "start": "bun run dist/server.js",
    "build": "bun build ./src/server.ts --outdir ./dist --target bun --format esm --minify --sourcemap",
    "lint": "tsc --noEmit -p tsconfig.json && biome lint --diagnostic-level=error --no-errors-on-unmatched",
    "lint:fix": "biome check --write --unsafe",
    "lint:staged": "biome check --error-on-warnings --no-errors-on-unmatched --staged",
    "dev": "concurrently \"bun --watch src/server.ts\" \"docker-compose up -d\"",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.42.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1",
    "redis": "^4.7.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.2.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "@types/redis": "^4.0.11",
    "bun-types": "^1.2.10",
    "commitizen": "^4.3.1",
    "commitlint": "^19.7.1",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.31.0",
    "husky": "^9.1.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
